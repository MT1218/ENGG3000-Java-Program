{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Gradle: Build",
      "type": "shell",
      "command": "./gradlew",
      "args": ["build"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$gradle"],
      "detail": "Build the entire project including tests"
    },
    {
      "label": "Gradle: Test",
      "type": "shell",
      "command": "./gradlew",
      "args": ["test"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$gradle"],
      "detail": "Run all tests"
    },
    {
      "label": "Gradle: Test (Verbose)",
      "type": "shell",
      "command": "./gradlew",
      "args": ["test", "--info", "--rerun-tasks"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$gradle"],
      "detail": "Run tests with verbose output and force re-execution"
    },
    {
      "label": "Gradle: Run Application",
      "type": "shell",
      "command": "./gradlew",
      "args": ["run"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$gradle"],
      "detail": "Run the main application"
    },
    {
      "label": "Gradle: Clean",
      "type": "shell",
      "command": "./gradlew",
      "args": ["clean"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$gradle"],
      "detail": "Clean build artifacts"
    },
    {
      "label": "Gradle: Clean Build",
      "type": "shell",
      "command": "./gradlew",
      "args": ["clean", "build"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$gradle"],
      "detail": "Clean and then build the entire project"
    },
    {
      "label": "Gradle: Build (Skip Tests)",
      "type": "shell",
      "command": "./gradlew",
      "args": ["build", "-x", "test"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$gradle"],
      "detail": "Build project without running tests"
    },
    {
      "label": "Gradle: Compile Java",
      "type": "shell",
      "command": "./gradlew",
      "args": ["compileJava"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": ["$gradle"],
      "detail": "Compile main Java source files only"
    },
    {
        "type": "markdownlint",
        "problemMatcher": [
            "$markdownlint"
        ],
        "label": "markdownlint: Lint all Markdown files in the workspace with markdownlint"
    },
{
			"label": "Pre-commit: Run All Checks",
			"type": "shell",
			"command": "pre-commit",
			"args": [
				"run",
				"--all-files"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}",
				"shell": {
					"executable": "C:\\Program Files\\Git\\bin\\bash.exe",
					"args": ["-c"]
				}
			},
			"problemMatcher": [
				{
					"owner": "pre-commit",
					"fileLocation": ["relative", "${workspaceFolder}"],
					"pattern": [
						{
							"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|info):\\s+(.*)$",
							"file": 1,
							"line": 2,
							"column": 3,
							"severity": 4,
							"message": 5
						}
					]
				}
			]
		},
		{
			"label": "Pre-commit: Install Hooks",
			"type": "shell",
			"command": "pre-commit",
			"args": [
				"install"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}",
				"shell": {
					"executable": "C:\\Program Files\\Git\\bin\\bash.exe",
					"args": ["-c"]
				}
			}
		},
		{
			"label": "Pre-commit: Update Hooks",
			"type": "shell",
			"command": "pre-commit",
			"args": [
				"autoupdate"
			],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			},
			"options": {
				"cwd": "${workspaceFolder}",
				"shell": {
					"executable": "C:\\Program Files\\Git\\bin\\bash.exe",
					"args": ["-c"]
				}
			}
		},
  ]
}
